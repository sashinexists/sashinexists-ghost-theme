<a href={{url}} class="post-preview-link">
    <article class="post-preview {{post_class}}{{#unless feature_image}} no-image{{/unless}}">
            <header class="post-preview-header">
                <h1 class="post-preview-title"><span class="post-preview-title" href={{url}}>{{title}}</span></h1>
                <section class="post-preview-meta">
                    Sent <time class="post-preview-meta-date" datetime="{{date format="YYYY-MM-DD"}}">{{date format="Do MMMM YYYY"}}</time>
                    <i class="fas fa-envelope-open"></i>
                </section>
            </header>

            {{#if feature_image}}
            <figure class="post-preview-image" style="background-image: url({{img_url feature_image size="l"}})">
            </figure>
            {{/if}}

            <section class="post-preview-excerpt">
                <p>{{excerpt}}...</p>
            </section>
            <footer class="post-preview-footer">
                <span href={{url}} class="read-article">
                    <span>Read letter</span>
                    <i class="fas fa-file-alt"></i>
                </span>
            </footer>
    </article>
</a>
