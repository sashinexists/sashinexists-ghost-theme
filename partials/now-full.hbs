<article class="post-full {{post_class}} {{#unless feature_image}}no-image{{/unless}}">

    <header class="post-full-header">
        <h1 class="post-full-title"><a href={{url}}>{{title}}</a></h1>
        <section class="post-full-meta">
            <span>Now Page</span>
            <i class="fas fa-clock"></i>
        </section>
    </header>


                            <figure class="post-full-image letterhead" style="background-image: url(/content/images/2021/04/murray-campbell-B_TdfGFuGwA-unsplash-cropped-for-now-page.jpg)">
    </figure>


    <section class="post-full-content">
        <div class="post-content">
            <figure style="max-width:100%;text-align:center;"
            class="notification-vault kg-card kg-embed-card kg-card-hascaption">
            <figcaption>
                This is the Now page published on 
                <strong><time class="post-full-meta-date"
                datetime="{{date format="YYYY-MM-DD"}}">{{date format="Do MMMM YYYY"}}</time></strong>
                <br><br>
                <a href="/now">Click here for the latest one</a>.
            </figcaption>
        </figure>
        <hr>
            {{content}}
        </div>
    </section>
    <div class="buttons-box-inline">
        <a href="/now" class="button-special button-now-latest">
            <span>
                <h3>Latest Now Page</h3>
            </span>
            <i class="fas fa-stars"></i>
        </a>
        <a href="/now-archive" class="button-special button-now-archive">
            <span>
                <h3>Past Now Pages</h3>
            </span>
            <i class="fas fa-clock"></i>
        </a>
    </div>

</article>

<script type="text/javascript" src="{{asset "js/image-details.js"}}"></script>

{{> comments}}