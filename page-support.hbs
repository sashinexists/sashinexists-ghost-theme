{{!< default }}
{{> header}}

{{#post}}
<main>

    <article class="post-full {{post_class}} {{#unless feature_image}}no-image{{/unless}}">

        <header class="post-full-header">
            <h1 class="post-full-title"><a href={{url}}>{{title}}</a></h1>
        </header>
        {{#if feature_image}}
        <figure class="post-full-image" style="background-image: url({{feature_image}})">
        </figure>
        {{/if}}

        <section class="post-full-content">
            <div class="post-content">
                <p>Thank you for showing interest in my work.</p>
                <p>If you see value in my work, please consider supporting me so I can continue. Your kindness is appreciated.</p>
                {{> support-buttons}}
                <hr>
                {{content}}
            </div>
        </section>

    </article>
</main>
{{/post}}