{{!< default }}
{{> header}}

{{#post}}
<main>

    <article class="post-full {{post_class}} {{#unless feature_image}}no-image{{/unless}}">

        <header class="post-full-header twitter-header">
            <span></span><h1><i class="fab fa-twitter"></i></h1><span></span></header>
        </header>

        <section class="post-full-content">
            <div class="post-content">
                {{content}}
            </div>
        </section>

    </article>
</main>
{{/post}}